#include "Header.hpp"

int main()
{
    int shmid = shmget((key_t)0x123456,4096,IPC_CREAT);

    char* addr = (char*)shmat(shmid,nullptr,0);

    for(int i = 0;i < 10;i++)
    {
        printf("addr:%s\n",addr);
        sleep(1);
    }

    shmdt((void*)addr);
    shmctl(shmid,IPC_RMID,nullptr);
    return 0;
}

